<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>@ViewBag.Title</title>
		<link href="@Url.Content(@Links.Content.less.bootstrap_less)" rel="stylesheet" type="text/css" />
		<link href="@Url.Content(@Links.Content.Site_css)" rel="stylesheet" type="text/css" />
	</head>

	<body>
		<div class="container">
			<div class="row">
				<div class="span3 sidebar">
					@RenderSection("SideBar")
				</div>
				<div class="span9 body">
					@RenderBody()
				</div>
			</div>
		</div>
		<script src="@Url.Content(@Links.Scripts.jquery_1_7_2_js)" type="text/javascript"></script>
		<script src="@Url.Content(@Links.Scripts.modernizr_1_7_js)" type="text/javascript"></script>
		<script src="@Url.Content(@Links.Scripts.bootstrap_js)" type="text/javascript"></script>
		<script src="@Url.Content(@Links.Scripts.less_min_js)" type="text/javascript"></script>
		<script src="@Url.Content(@Links.Scripts.knockout_2_1_0_js)" type="text/javascript"></script>
		@RenderSection("ScriptFooter")
	</body>
</html>
